<h1>ログイン画面</h1>

<%= form_with scope: :session, url: login_path, local:true do |f| %>
  <%= f.label :name, "ユーザー名" %>
  <%= f.text_field :name, placeholder: "name" %>
  
  <%= f.label :password, "パスワード" %>
  <%= f.text_field :password, placeholder: "password" %>
  
  <%= f.submit "ログイン"  %>
<% end %>