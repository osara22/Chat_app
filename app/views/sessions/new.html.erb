<h1>ログイン</h1>

<%= form_with scope: :session, url: login_path, local:true do |f| %>
  <table>
    <tbody>
      <tr>
        <td><%= f.label :name, "ユーザー名" %></td>
        <td><%= f.text_field :name, placeholder: "name" %></td>
      </tr>
      <tr>
        <td><%= f.label :password, "パスワード" %></td>
        <td><%= f.password_field :password, placeholder: "password" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "ログイン"  %></td>
      </tr>
    </tbody>
  </table>
<% end %>