<h1>新規ユーザー登録</h1>

<%= form_with model: @user, url: users_path, local:true do |f| %>
  <table>
    <tbody>
      <tr>
        <td><%= f.label :name, "ユーザー名" %></td>
        <td><%= f.text_field :name, placeholder: "name" %></td>
      </tr>
      <tr>
        <td><%= f.label :password, "パスワード" %></td>
        <td><%= f.password_field :password, placeholder: "password" %></td>
      </tr>
      <tr>
        <td><%= f.label :password_confirmation, "パスワード(再入力)" %></td>
        <td><%= f.password_field :password_confirmation, placeholder: "password" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "新規登録", class: "bigsubmit" %></td>
      </tr>
    </tbody>
  </table>
<% end %>