<h1>チャットルームの新規作成</h1>

<%= form_with model: @room, url:rooms_path, local:true do |f| %>
  <table>
    <tbody>
      <tr>
        <td><%= f.label :name, "部屋名(必須)" %></td>
        <td><%= f.text_field :name, placeholder: "name"  %></td>
      </tr>
      <tr>
        <td><%= f.label :delete_password, "消去パスワード(必須)" %></td>
        <td><%= f.text_field :delete_password, placeholder: "delete_password"  %></td>
      </tr>
      <tr>
        <td><%= f.label :join_password, "部屋にパスワードをかける(任意)" %></td>
        <td><%= f.text_field :join_password, placeholder: "join_password"  %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "新規登録"  %></td>
      </tr>
    </tbody>
  </table>
<% end %>